{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "newPassword": {
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    },
    "oldPassword": {
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    },
    "email": {
      "type": "string",
      "minLength": 7,
      "maxLength": 25,
      "format": "email"
    }
  },
  "additionalProperties": false,
  "required": [
    "oldPassword",
    "newPassword",
    "email"
  ]
}
